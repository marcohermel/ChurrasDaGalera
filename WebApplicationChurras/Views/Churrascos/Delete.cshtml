@model WebApplicationChurras.Models.Churrasco

@{
    ViewData["Title"] = "Deletar Churrasco";
}

<h2>@(Model.Descricao + " - " + Model.Data.ToShortDateString())</h2>

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <h3>Você tem certeza que deseja deletar o churrasco?</h3>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ChurrascoID" /> 
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        <input type="submit" value="Deletar" class="btn btn-outline-danger" /> 

    </form>
</div>
