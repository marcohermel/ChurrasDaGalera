@model WebApplicationChurras.Models.Participante

@{
    ViewData["Title"] = "Deletar Participante";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que você quer deletar o participante?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ComBebida)
        </dt>
        <dd>
            @( Model.ComBebida ? "Sim" : "Não" )
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ValorContribuicao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ValorContribuicao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Pago)
        </dt>
        <dd>
            @( Model.Pago ? "Sim" : "Não" )
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Observacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ParticipanteID" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Details" asp-controller="Churrascos" asp-route-id="@Model.ChurrascoID">Voltar</a>
    </form>
</div>
